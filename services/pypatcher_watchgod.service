[Unit]
Description=pypatcher_watchgod service
After=jacktrip.service darkice.service pypatcher_callback.service

[Service]
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python3 -u ~/jacktrip_pypatcher_fork/patcher_watchgod.py
